#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
Logic:
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, 0.1]
            id: settings_box
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "CH1"
                    id: ch_name
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "xlim"
                TextInput:
                    id: xlim
                    on_text: root.update_lim("X", *args)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "ylim"
                TextInput:
                    id: ylim
                    on_text: root.update_lim("Y", *args)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Autoscale"
                CheckBox:
                    on_active: root.update_lim("autoscale", *args)
                    active: root.autoscale
                Button:
                    text: "SAVE"
                    bold: True
                    on_press: root.save_data()
            # BoxLayout:
            #     orientation: "vertical"
            #     Label:
            #         text: "window"
            #     TextInput:
            #         id: window
        BoxLayout:
            size_hint: [1, 0.5]
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "CH1"
                BoxLayout:
                    orientation: "horizontal"
                    Label:
                        text: "T"
                    CheckBox:
                        on_active: root.plot_select("00", *args)
                    Label:
                        text: "F"
                    CheckBox:
                        on_active: root.plot_select("10", *args)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "CH2"
                BoxLayout:
                    orientation: "horizontal"
                    Label:
                        text: "T"
                    CheckBox:
                        on_active: root.plot_select("01", *args)
                    Label:
                        text: "F"
                    CheckBox:
                        on_active: root.plot_select("11", *args)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "CH3"
                BoxLayout:
                    orientation: "horizontal"
                    Label:
                        text: "T"
                    CheckBox:
                        on_active: root.plot_select("02", *args)
                    Label:
                        text: "F"
                    CheckBox:
                        on_active: root.plot_select("12", *args)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "CH4"
                BoxLayout:
                    orientation: "horizontal"
                    Label:
                        text: "T"
                    CheckBox:
                        on_active: root.plot_select("03", *args)
                    Label:
                        text: "F"
                    CheckBox:
                        on_active: root.plot_select("13", *args)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Cross Spectral Density"
                BoxLayout:
                    orientation: "horizontal"
                    CheckBox:
                        on_active: root.plot_select("3", *args)
                    TextInput:
                        id: ti
                        hint_text: "1-2"
                        on_text: root.csd_validate(*args)
