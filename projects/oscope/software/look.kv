#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
Logic:
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [0, 0]
            id: settings_box
            orientation: "horizontal"
            Label:
                text: "CH1"
                id: ch_name
            Label:
                size_hint: [0.3, 1]
                text: "xlim"
            TextInput:
                id: xlim
                on_text: root.update_lim("X", *args)
            Label:
                text: "ylim"
            TextInput:
                id: ylim
                on_text: root.update_lim("Y", *args)
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Autoscale"
                CheckBox:
                    on_active: root.update_lim("autoscale", *args)
                    active: root.autoscale
            Label:
                text: "window"
            TextInput:
                id: window
        BoxLayout:
            size_hint: [1, .05]
            orientation: "horizontal"
            Label:
                text: "CH1"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "T"
                CheckBox:
                    on_active: root.plot_select("00", *args)
                Label:
                    text: "F"
                CheckBox:
                    on_active: root.plot_select("10", *args)
            Label:
                text: "CH2"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "T"
                CheckBox:
                    on_active: root.plot_select("01", *args)
                Label:
                    text: "F"
                CheckBox:
                    on_active: root.plot_select("11", *args)
            Label:
                text: "CH3"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "T"
                CheckBox:
                    on_active: root.plot_select("02", *args)
                Label:
                    text: "F"
                CheckBox:
                    on_active: root.plot_select("12", *args)
            Label:
                text: "CH4"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "T"
                CheckBox:
                    on_active: root.plot_select("03", *args)
                Label:
                    text: "F"
                CheckBox:
                    on_active: root.plot_select("13", *args)
        BoxLayout:
            size_hint: [1, .05]
            orientation: "horizontal"
            Label:
                text: "Cross Spectral Density"
            CheckBox:
                on_active: root.plot_select("3", *args)
            TextInput:
                id: ti
                hint_text: "1-2"
                on_text: root.csd_validate(*args)
        BoxLayout:
            size_hint: [1, .1]
            orientation: "horizontal"
            Button:
                text: "SAVE"
                bold: True
                on_press: root.save_data()
