#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
Logic:
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, .1]
            id: settings_box
            orientation: "horizontal"
            Label:
                text: "Plot Settings"
            Label:
                text: "CH1"
                id: ch_name
            Label:
                text: "xlim"
            TextInput:
                hint_text: "0, 1.0"
                id: xlim
            Label:
                text: "ylim"
            TextInput:
                hint_text: "0, 1.0"
                id: ylim
            Label:
                text: "window"
            TextInput:
                hint_text: "hanning"
                id: ylim
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Label:
                text: "TS"
            Label:
                text: "CH1"
            CheckBox:
                on_active: root.ch_select("00", *args); root.plot_settings_select(*args)
            Label:
                text: "CH2"
            CheckBox:
                on_active: root.ch_select("01", *args); root.plot_settings_select(*args)
            Label:
                text: "CH3"
            CheckBox:
                on_active: root.ch_select("02", *args); root.plot_settings_select(*args)
            Label:
                text: "CH4"
            CheckBox:
                on_active: root.ch_select("03", *args); root.plot_settings_select(*args)
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Label:
                text: "FFT"
            Label:
                text: "CH1"
            CheckBox:
                on_active: root.ch_select("10", *args)
            Label:
                text: "CH2"
            CheckBox:
                on_active: root.ch_select("11", *args)
            Label:
                text: "CH3"
            CheckBox:
                on_active: root.ch_select("12", *args)
            Label:
                text: "CH4"
            CheckBox:
                on_active: root.ch_select("13", *args)
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Label:
                text: "Cross Spectral Density"
            CheckBox:
                on_active: root.ch_select("3", *args)
            TextInput:
                id: ti
                hint_text: "1-2"
                on_text: root.csd_validate(*args)
        BoxLayout:
            size_hint: [1, .1]
            orientation: "horizontal"
            Button:
                text: "SAVE"
                bold: True
                on_press: root.save_data()
